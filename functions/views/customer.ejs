            <h2 class="content-heading">تعديل العميل</h2>
	
        <form action="/editCustomer" method="POST" dir="rtl">
            <div class="form-group">
                <label> اسم العميل </label>
                <input type="text" name="name" class="form-control" value="<%=
          customer["customerName"] %> " />
            </div>
            <div class="form-group">
                <label> بريد العميل </label>
                <input type="text" name="email" class="form-control" value="<%=
          customer["customerEmail"] %> " />
            </div>
            <div class="form-group">
                <label> هاتف العميل </label>
                <input type="text" name="phone" class="form-control" value="<%=
          customer["customerPhone"] %> " />
            </div>
            <div class="form-group">
                <label> الشركة </label>
                <input type="text" name="company" class="form-control" value="<%=
          customer["customerCompany"] %> " />
            </div>
            <input type="hidden" name="customer" value="<%= customer["customerUID"]
        %>" />

            <div class="form-group">
                <input type="submit" value="تعديل" class="btn btn-primary btn-lg" />
            </div>
        </form>
    </div>
</div>
</body>