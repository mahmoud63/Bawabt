<div class="row">
  <!-- خانة المندوبين -->
  <div class="col-md-6 col-xl-6">
    <div class="block">
      <div class="block-content block-content-full text-center bg-gd-cherry">
        <div class="p-20 mb-10">
          <i
            class="fa fa-3x fa-american-sign-language-interpreting text-white-op"
          ></i>
        </div>
        <p class="font-size-lg font-w600 text-white mb-0">
          المندوبين المميزين
        </p>
        <p class="font-size-sm text-uppercase font-w600 text-white-op mb-0">
          المندوبين الاكثر نشاطا
        </p>
      </div>
      <div class="block-content block-content-full">
        <table class="table table-borderless table-striped table-hover mb-0">
          <tbody>
            <tr>
              <td class="text-center" style="width: 40px;">
                <i class="fa fa-user"></i>
              </td>
              <td>
                <strong>اسم المندوب</strong>
              </td>
              <td class="text-center" style="width: 40px;">
                <strong class="text-success">عدد العملاء</strong>
              </td>
            </tr>
            <% for(let elem of salemanPreformance_){ %>

            <tr>
              <td class="text-center"><i class="fa fa-user"></i></td>
              <td>
                <%= salemen[elem[0]]['salesmanName'] %>
              </td>
              <td class="text-center">
                <%= elem[1] %>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
      <div class="block-content block-content-full text-center bg-body-light">
        <a class="btn btn-alt-secondary" href="/salemen">
          <i class="fa fa-eye mr-5"></i> مشاهدة الكل ..
        </a>
      </div>
    </div>
  </div>
  <div class="col-md-6 col-xl-6">
    <div class="block">
      <div class="block-content block-content-full text-center bg-gd-dusk">
        <div class="p-20 mb-10">
          <i class="fa fa-3x fa-users text-white-op"></i>
        </div>
        <p class="font-size-lg font-w600 text-white mb-0">
          احدث الشركات المشتركة
        </p>
        <p class="font-size-sm text-uppercase font-w600 text-white-op mb-0">
          العملاء المشتركين حديثاً
        </p>
      </div>
      <div class="block-content block-content-full">
        <table class="table table-borderless table-striped table-hover mb-0">
          <tbody>
            <tr>
              <td>
                <strong>اسم الشركة</strong>
              </td>
              <td class="text-center" style="width: 50%;">
                <strong class="text-success">نشاط الشركة</strong>
              </td>
            </tr>
            <% for(let company in companies){ %>

            <tr>
              <td>
                <%= companies[company].customerCompany %>
              </td>
              <td class="text-center">
                <%= companies[company].companyJob%>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

